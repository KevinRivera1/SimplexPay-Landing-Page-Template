---
import { getBannerBenefits } from '@application/use-cases/getBannerBenefits';

const Benefits = await getBannerBenefits();
---
<section class="bg-esmeralda-dark">
    <div class="wrapper container mx-auto p-16 text-white">
      <small class="uppercase">{Benefits.title}</small>
      <h2 class="mb-8 w-full text-4xl font-bold text-white lg:w-[50%]">{Benefits.headline}</h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
          Benefits.steps.map((step) => (
            <article class="rounded-2xl bg-white/10 p-4">
              <span class="text-7xl">{step.value}</span>
              <h3 class="mb-4 text-2xl font-bold text-white">{step.label}</h3>
              <p class="mb-4 text-lg text-pretty">{step.description}</p>
            </article>
          ))
        }
    </div>
</section>
  