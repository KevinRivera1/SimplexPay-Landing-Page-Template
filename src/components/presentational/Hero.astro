---
import { getHero } from "@application/use-cases/getHero";
import Coinbase from "@assets/sponsors/Coinbase.svg";
import Instacart from "@assets/sponsors/Instacart.svg";
import Klarna from "@assets/sponsors/Klarna.svg";
import ArrowUp from "@assets/svg/ArrowUp.svg";

const HeroData = await getHero();
---

<section aria-labelledby="hero-title">
    <div class="container mx-auto px-6 py-12 md:px-12">
        <div class="grid grid-cols-1 items-center gap-8 md:grid-cols-2">
            <div class="space-y-6">
                <h1 id="hero-title" class="text-3xl leading-tight font-extrabold text-gray-900 sm:text-4xl md:text-5xl lg:text-6xl">{HeroData.hero.title}</h1>
                <p class="text-base text-gray-600 sm:text-lg lg:text-xl">{HeroData.hero.description}</p>
        
                <form action="#" method="post" class="flex flex-col gap-y-4 lg:flex-row lg:gap-y-0" novalidate>
                    <label for="email" class="sr-only">{HeroData.hero.form.ctaLabel}</label>
                    <input type="email" id="email" name="email" required aria-required="true" placeholder={HeroData.hero.form.placeholder} class="px-4 py-2 focus:ring-esmeralda rounded-bl-xl rounded-tl-xl border border-gray-300 text-gray-900 placeholder-gray-400 focus:border-transparent focus:ring-2 focus:outline-none" />
                    <button type="submit" class="bg-esmeralda hover:bg-esmeralda-dark focus:ring-esmeralda inline-flex gap-2 items-center px-4 py-2 justify-center rounded-br-xl rounded-tr-xl text-base text-white transition focus:ring-2 focus:ring-offset-2">
                    {HeroData.hero.form.ctaLabel}
                    <ArrowUp class="inline-block size-6" />
                    </button>
                </form>
        
                <figure class="flex items-center justify-between gap-x-6 lg:gap-x-0" aria-label="Trusted by">
                    <figcaption class="sr-only">Trusted by</figcaption>
                    <Klarna class="h-12 w-auto" />
                    <Coinbase class="h-12 w-auto" />
                    <Instacart class="h-12 w-auto" />
                </figure>
            </div>
    
            <div class="flex justify-center">
                <figure>
                    <img src="/images/card-payment.png" alt={HeroData.hero.image.alt} class="h-auto w-full max-w-md object-contain" loading="lazy" />
                </figuure>
            </div>
        </div>
    </div>
</section>
  